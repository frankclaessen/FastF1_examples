    "import fastf1\n",
    "import matplotlib as mpl\n",
    "import matplotlib.pyplot as plt\n",
    "from matplotlib.collections import LineCollection\n",
    "from matplotlib import cm\n",
    "import numpy as np\n",
    "\n",
    "#\n",
    "# Visualizing speed on track for fastest lap\n",
    "#\n",
    "\n",
    "fastf1.Cache.enable_cache('cache')  # replace with your cache directory\n",
    "\n",
    "session = fastf1.get_session(2021, 'Qatar', 'Q')\n",
    "laps = session.load_laps(with_telemetry=True)\n",
    "# fastest lap taken\n",
    "lap = laps.pick_fastest()\n",
    "# for this lap get telemetry data\n",
    "tel = lap.get_telemetry()\n",
    "# since we want to map the track combined with gear data we pick the x/y values\n",
    "\n",
    "x = np.array(tel['X'].values)\n",
    "y = np.array(tel['Y'].values)\n",
    "#\n",
    "# reshaping the two arrays into 1 array\n",
    "# T = transpose\n",
    "# -1 means - not sure how many rows - let np look into this\n",
    "# 1 means we know for sure that both arrays have 1 column\n",
    "# 2 means the outcome has to have 2 columns (indeed x and y)\n",
    "#\n",
    "points = np.array([x, y]).T.reshape(-1, 1, 2)\n",
    "#\n",
    "# -1 >> leaving out the last value from points on index 0 since it contains 151 elements\n",
    "# and on index 1 it contains 150 values - no idea what caused this - must have happened \n",
    "# during or at the reshape - I find these settings as default in the reference manual\n",
    "# \n",
    "#\n",
    "segments = np.concatenate([points[:-1], points[1:]], axis=1)\n",
    "#\n",
    "# Now getting the speed data\n",
    "#\n",
    "brakePress = tel['Brake'].to_numpy().astype(int)\n",
    "#\n",
    "# Prepare the plotting part\n",
    "#\n",
    "# get a colormap\n",
    "#\n",
    "cmap = cm.get_cmap('cool')\n",
    "#\n",
    "# normalize values of the colormap - a bit over 100 to get a nice bar\n",
    "#\n",
    "norm=mpl.colors.Normalize(vmin=0, vmax=110)\n",
    "#\n",
    "# work on the line collection\n",
    "#\n",
    "lc_comp = LineCollection(segments, norm=norm, cmap=cmap)\n",
    "\n",
    "#\n",
    "# combine with gear information\n",
    "#\n",
    "lc_comp.set_array(brakePress)\n",
    "lc_comp.set_linewidth(4)\n",
    "# \n",
    "## make the plot - gca = get current axes or create them if not available\n",
    "#\n",
    "plt.gca().add_collection(lc_comp)\n",
    "plt.axis('equal')\n",
    "#\n",
    "# no data-ticks\n",
    "#\n",
    "plt.tick_params(labelleft=False, left=False, labelbottom=False, bottom=False)\n",
    "#\n",
    "# plotting the title\n",
    "#\n",
    "\n",
    "title = plt.suptitle(\n",
    "    f\"Break pressure Visualization\\n\"\n",
    "    f\"{lap['Driver']} - Qualifiction - {session.weekend.name} {session.weekend.year}\"\n",
    ")\n",
    "\n",
    "#\n",
    "# adding a color bar\n",
    "# mapping of colors based on the noted break-pressures    \n",
    "#\n",
    "#\n",
    "cbar = plt.colorbar(mappable=lc_comp, label=\"Brake-Pressure\")\n",
    "#\n",
    "# set tick labels slightly higher\n",
    "#\n",
    "cbar.set_ticks(np.arange(5,115,10))\n",
    "cbar.set_ticklabels(np.arange(0,110,10))\n",
    "# plot\n",
    "plt.show()\n"
   ]
  },
 ],
